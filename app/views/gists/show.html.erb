<%- model_class = Gist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:gisturl) %>:</strong></dt>
  <dd><script src="https://gist.github.com/<%= @gist.gisturl %>.js"></script></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @gist.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:matome_id) %>:</strong></dt>
  <dd><%= @gist.matome_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @gist.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @gist.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codetype_id) %>:</strong></dt>
  <dd><%= @gist.codetype_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              matomes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gist_path(@gist), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              edit_gist_path(@gist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= simple_form_for @matome, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@matome[:name]) %>
  <%= f.input :description %>
  <%= error_span(@matome[:description]) %>
  <%= f.input :codetype_id %>
  <%= error_span(@matome[:codetype_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matomes_path, :class => 'btn btn-default' %>
<% end %>

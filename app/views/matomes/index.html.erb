<%= render :file => 'layouts/header.erb' %>

<h2>最近のまとめ</h2>
<% @matomes.each do |matome| %>
  <div class="main">
  <%= image_tag(icon_matome_path(matome), :class => "icon") %>
  <div class="date">
  最終編集日時:<%= d = matome.gists.maximum(:updated_at)
             if (d != nil) then
               d.in_time_zone
             else
               "未登録"
             end %> ／ 作成日時:<%= matome.created_at %>
  </div>
  <h3><%= link_to matome.name, matome, data: { no_turbolink: true } %></h3>
  <div class="addicon">
  <%= link_to '追加', new_matome_gist_path(matome) %>
  <%= link_to image_tag(asset_path("add.png"), :class => "iconimg"), new_matome_gist_path(matome) %>
  <%= link_to '編集', edit_matome_path(matome) %>
  <%= link_to image_tag(asset_path("edit.png"), :class => "iconimg"), edit_matome_path(matome) %>
  </div>
  <div class="description">
  <%= matome.description %>
  </div>
  </div>
<!--
      <td><%= link_to 'Edit', edit_matome_path(matome) %></td>
      <td><%= link_to 'Destroy', matome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
<% end %>
<br>
<h2><%= link_to 'あたらしくまとめを作る', new_matome_path %></h2>
